<div class="container">
  <h1>Serviços Disponíveis</h1>
  <ul>
    <% @services.each do |service| %>
        <h3><%= service.description %></h3>
        <h5><%= service.user.name %></h5>
        <p>Preço: R$<%= service.price %></p>
        <%= link_to "Saiba mais", service_path(service) %> |
        <%= link_to 'Editar', edit_service_path(service) %> |
        <%= link_to 'Apagar', service, method: :delete, data: { confirm: 'Tem a certeza?' } %>
        <hr>
    <% end %>
  </ul>
 <div class="container mb-5 mt-4">
  <%= link_to 'Início', root_path, class: "btn btn-primary btn-lg w-100" %>
</div>

</div>
